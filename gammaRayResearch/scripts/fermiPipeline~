gtbin algorithm=CMAP evfile=source_name_binned1_gti.fits outfile=source_name_binned_cmap_small.fits scfile=none nxpix=141 nypix=141 binsz=0.1 coordsys=CEL xref=right_ascension yref=declination axisrot=0 proj=STG